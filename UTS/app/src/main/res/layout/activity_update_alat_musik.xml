<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UpdateAlatMusik"
    android:background="@drawable/bc8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/judul3"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="UPDATE LIST ALAT MUSIK TRADISIONAL"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="	#0000FF"/>

        <!-- Username Label -->
        <EditText android:id="@+id/text_namaalatmusikup"
            android:layout_marginTop="10dp"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:hint="Nama Alat Musik"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />

        <!--  Label -->
        <EditText android:id="@+id/text_asalup"
            android:layout_marginTop="10dp"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:hint="Asal Provinsi"
            android:gravity="center"
            android:background="@drawable/edit_text"/>

        <EditText android:id="@+id/text_deskripsiup"
            android:layout_marginTop="10dp"
            android:layout_width="328dp"
            android:layout_height="90dp"
            android:hint="Deskripsi Alat Musik"
            android:gravity="center"
            android:background="@drawable/edit_text"/>

        <ImageButton
            android:id="@+id/button_saveup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="240dp"
            app:srcCompat="@drawable/save" />

    </LinearLayout>
</FrameLayout>
